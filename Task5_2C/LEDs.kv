<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		Label:
			text: "Select LED"
			font_size:32

		GridLayout:
			cols:2

			Label:
				text: "Red"
				font_size:20
			CheckBox:
				group: "led_color"
				on_active: root.checkbox_click(self, self.active, "Red")

			Label:
				text: "Blue"
				font_size:20
			CheckBox:
				group: "led_color"
				on_active: root.checkbox_click(self, self.active, "Blue")
				
			Label:
				text: "Green"
				font_size:20
			CheckBox:
				group: "led_color"
				on_active: root.checkbox_click(self, self.active, "Green")
				
			Label:
				text: "Exit"
				font_size:20
			CheckBox:
				group: "led_color"
				on_active: root.checkbox_click(self, self.active, "Quit")				

		Label:
			id: output_label
			text: ""
			font_size:32
